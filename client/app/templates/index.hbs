{{page-title "Home"}}
<div class="content">
    <div class="animate__animated animate__shakeX">I'm bouncing!</div>

</div>
<div>
    <div>
        <BsForm
            @formLayout="vertical"
            @model={{this.user}}
            @onSubmit={{this.enterLobby}}
            as |form|
            >
            <form.element @property="username" as |el|>
                <el.control placeholder="Enter your username"/>
            </form.element>
            <form.submitButton>Submit</form.submitButton>
        </BsForm>
        <label for="username">Enter your name</label>
        <Input
            id="username"
            @type="text"
            @value={{this.username}}
        />
        <button type="button" {{on "click" this.enterLobby}}>Enter your name</button>
    </div>
</div>
{{outlet}}
<div class="nav-bar-container">
    <div id="rules-container">
        <div class="nav-bar-button">
            <BsModalSimple
                @open={{this.rulesModalOpen}}
                @title="How to play Coup"
                @closeTitle="Ok"
                @size=""
                @closeButton={{true}}
                @fade={{true}}
                @backdrop={{true}}
                @backdropClose={{true}}
                @onSubmit={{this.submit}}
                @onHide={{this.close}}
                @renderInPlace={{true}}
            >
                <GameRules />
            </BsModalSimple>
        <BsButton
            @type="primary"
            @outline={{true}}
            @onClick={{this.openRulesModal}}
        >Rules
        </BsButton>
        </div>
        <div class="nav-bar-button">
            <BsModalSimple
                @open={{this.actionSheetModalOpen}}
                @title="Action Sheet"
                @closeTitle="Ok"
                @size=""
                @closeButton={{true}}
                @fade={{true}}
                @backdrop={{true}}
                @backdropClose={{true}}
                @onSubmit={{this.submit}}
                @onHide={{this.close}}
                @renderInPlace={{true}}
            >
                <ActionSheet />
            </BsModalSimple>
            <BsButton
                @type="primary"
                @outline={{true}}
                @onClick={{this.openActionSheetModal}}
            >Action Sheet
            </BsButton>
        </div>
    </div>
    {{#if (and this.session.isAuthenticated (not (eq this.router.currentRouteName 'game')))}}
        <div id="sign-out-container">
            <div class="nav-bar-button">
                <BsButton
                @type="secondary"
                @outline={{true}}
                @onClick={{this.invalidateSession}}
                >Sign Out
                </BsButton>
            </div>
        </div>
    {{/if}}
</div>